(ns coffee.db.core
  (:require
    [yesql.core :refer [defqueries]]
    [honeysql.core :as sql]
    [honeysql.helpers :refer :all]))

(def db-spec
  {:subprotocol "postgresql"
   :subname "//localhost/coffee"
   :user "coffee"
   :password "coffee"})

(defqueries "sql/queries.sql" {:connection db-spec})
